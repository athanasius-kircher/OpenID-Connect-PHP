{
    "name": "jumbojett/openid-connect-php",
    "description": "Bare-bones OpenID Connect client",
    "require": {
        "php": ">=5.6",
        "phpseclib/phpseclib" : "2.0.1",
        "ext-json": "*",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "archive" : {
        "exclude" : [
            ".*"
        ]
    },
    "autoload" : {
        "psr-4": {
            "Athanasius\\": "src/",
            "AthanasiusTests\\": "tests/"
        }
    },
    "require-dev": {
        "zendframework/zend-diactoros": "^1.6",
        "phpunit/phpunit": "^7.5"
    }
}
